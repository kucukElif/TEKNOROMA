@model AppUserVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}





<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <div class="col-lg-6" style="text-align:center">
                @if (ViewBag.Success != null)
                {
                    <h5 class="text-success">@ViewBag.Success</h5>}
                else
                {
                    <div asp-validation-summary="All"></div>
                }

            </div>
        </div>
    </div>
    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Sign up</h4></header>
            <form asp-action="Create" asp-controller="Home" method="post">
                <div class="form-row">
                    <div class="col form-group">
                        <label>Ad</label>
                        <input asp-for="FirstName" required type="text" class="form-control" placeholder="">
                    </div> <!-- form-group end.// -->
                    <div class="col form-group">
                        <label>Soyad</label>
                        <input asp-for="LastName" required type="text" class="form-control" placeholder="">
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row end.// -->
                <div class="form-group">
                    <label>UserName</label>
                    <input asp-for="UserName" required type="text" class="form-control" placeholder="">
                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" required type="email" class="form-control" placeholder="">
                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div> <!-- form-group end.// -->


                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Şifre</label>
                        <input asp-for="Password" required class="form-control" type="password">
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Şifre Tekrar</label>
                        <input asp-for="RepeatPassword" required class="form-control" type="password">
                    </div> <!-- form-group end.// -->
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Kayıt Ol </button>
                </div> <!-- form-group// -->
                <div class="form-group">
                    <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" checked=""> <div class="custom-control-label"> I am agree with <a href="#">terms and contitions</a>  </div> </label>
                </div> <!-- form-group end.// -->
            </form>
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Zaten hesabım var. O zaman <a asp-action="Login" asp-controller="Account">Giriş Yap</a></p>
    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>
