@model Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Stock" method="post">
            <p>
                @Model.ProductName isimli ürünü silmek istiyor musunuz?
            </p>
            <button class="btn btn-danger">Evet</button>
            <a asp-action="Index" asp-controller="Stock" class="btn" >İptal</a>
        </form>
    </div>
</div>

