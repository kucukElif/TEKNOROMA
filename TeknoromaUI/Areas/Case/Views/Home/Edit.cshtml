@model Customer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Case/Views/Shared/_CaseLayout.cshtml";
}

<div class="card" >
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <form role="form" asp-action="Edit" asp-controller="Home" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>TC Kimlik No</label>
                                <input asp-for="TC" type="text" class="form-control" placeholder="Tc Kimlik Numarası" />
                            </div>
                            <div class="form-group">
                                <label>Müşteri Adı</label>
                                <input asp-for="CustomerName" type="text" class="form-control" placeholder="Müşteri Adı" />
                            </div>

                            <div class="form-group">
                                <label>Şirket Adı</label>
                                <input asp-for="CompanyName" type="text" class="form-control" placeholder="Şirket Adı"/>
                            </div>

                            <div class="form-group">
                                <label>Email Adresi</label>
                                <input asp-for="EmailAddress" type="text" class="form-control" placeholder="Email Adresi"/>
                            </div>
                            <div class="form-group">
                                <label>Telefon Numarası</label>
                                <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon Numarası" />
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

