@model Customer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Case/Views/Shared/_CaseLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Yeni Kategori Oluştur</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" asp-action="Create" asp-controller="Home" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Müşteri TC No</label>
                                <input asp-for="TC" type="text" class="form-control" placeholder="TC girin">
                            </div>
                            <div class="form-group">
                                <label>Müşteri Adı</label>
                                <input asp-for="CustomerName" type="text" class="form-control" placeholder="Müşteri adı girin">
                            </div>
                            <div class="form-group">
                                <label>Şirket</label>
                                <input asp-for="CompanyName" type="text" class="form-control" placeholder="Müşteri adı girin">
                            </div>

                            <div class="form-group">
                                <label>Email Adres</label>
                                <input asp-for="EmailAddress" type="text" class="form-control" placeholder="Mail adresi Girin">
                            </div>

                            <div class="form-group">
                                <label>Telefon Numarası</label>
                                <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon numarası Girin">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





