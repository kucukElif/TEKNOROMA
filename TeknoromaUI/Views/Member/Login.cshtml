@model AppUserLoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mx-auto" style="max-width:520px; margin-top:40px; margin-bottom:40px">
    <div class="card-body">
        <h4 class="card-title mb-4">Kullanıcı Giriş</h4>
        <form asp-action="Login" asp-controller="Member" method="post">
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" type="text">
            </div> <!-- form-group// -->
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Şifre" type="password">
            </div> <!-- form-group// -->

            <div class="form-group">
                <a href="#" class="float-right">Forgot password?</a>
                <label class="float-left custom-control custom-checkbox">
                    <input type="checkbox" asp-for="RememberMe" class="custom-control-input" checked="">
           
                </label>
            </div> <!-- form-group form-check .// -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Giriş Yap  </button>
            </div> <!-- form-group// -->
        </form>
    </div>
    </div>